<div class="container">
    <div class="row">
        <div class="col-12 mt-4">
            {{#each Blogs}}
            <div class="row mb-4">
                <div class="col-6">
                    <a href="/blog/{{Slug}}" class="blogTitle">{{Title}}</a>
                </div>
                <div class="offset-2 col-4">
                    <span class="blogDate">{{Date}}</span>
                </div>
                <span class="blogSubtitle">{{SubTitle}}</span>
            </div>
            {{/each}}
        </div>
    </div>
</div>